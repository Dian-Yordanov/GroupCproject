            android:name="com.groupC.project.StartingActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.groupC.project.CountryActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.groupC.project.IndicatorActivity"
            android:label="@string/app_name" >
