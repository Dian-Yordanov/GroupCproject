<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:descendantFocusability="beforeDescendants"
  	android:focusableInTouchMode="true">

    <TextView
        android:id="@+id/indicatorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select a country you wish to learn more about by an indicator" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/indicatorCountryEditText1"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="Search a country" />

        <EditText
            android:id="@+id/indicatorCountryEditText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="Search an indicator" >

        </EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ListView
            android:id="@+id/indicatorListView1"
            android:layout_width="155dp"
            android:layout_height="wrap_content" >

        </ListView>

        <ListView
            android:id="@+id/indicatorListView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </ListView>
    </LinearLayout>

</LinearLayout>